{% extends "_layout" %}

{% block content %}
    {# Toon entries voor de 'Home'-sectie met een limiet van 80 #}
    <section class="music-content">
        {% set homeEntries = craft.entries().section('Home').limit(80) %}
        {% for entry in homeEntries %}
            <h2>{{ entry.cat3 }}</h2>
        {% endfor %}
    </section>
    
    {# Toon entries voor de 'artist'-sectie met een limiet van 80 #}
    <section class="music-section">
        {% set artistEntries = craft.entries().section('artist').limit(80) %}
        
        {% for entry in artistEntries %}
            <article class="Music-feed">
                <div>
                    <img src="{{ entry.bannerImage.one().url('bannerImage') }}" alt="{{ entry.title }}">
                    <h2><a href="{{ entry.url }}">{{ entry.title }}</a></h2>
                </div>
            </article>
        {% endfor %}
    </section>
{% endblock %}
