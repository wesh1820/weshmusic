{% extends "_layout.twig" %}
{% block content %}
      <section class="showcase-area" id="showcase">
      </section>
      <section class="download-now">
         <h1>Discover all our music</h1>
         <div class="buttons">
            <a href="../WESHMusic/welcome.php" class="btn btn-apple"><i class="fab fa-apple"></i> App Store</a>
