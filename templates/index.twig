{% extends "_layout2.twig" %}

{% block content %}
    {# Ophalen van entries voor de 'header'-sectie #}
    {% set headerEntries = craft.entries().section('header') %}

    {# Doorloop de header entries en toon de showcase sectie #}
    {% for entry in headerEntries %}
        <section class="showcase-area" id="showcase">
            <div>
                <img src="{{ entry.headerimage.one().url('headerimage') }}" alt="{{ entry.title }}" class="no-border-radius">
            </div>
        </section>
    {% endfor %}

    {# Over ons Sectie 1 #}
    <section id="about2">
        <div class="about-wrapper container">
            <div class="about-text">
                {# Ophalen van entries voor de 'Home'-sectie met een limiet van 3 #}
                {% set homeEntries = craft.entries().section('Home').limit(3) %}
                {# Doorloop de home entries en toon categorie 1 informatie #}
                {% for entry in homeEntries %}
                    <p class="small">{{ entry.cat1 }}</p>
                    <h2>{{ entry.cat1description }}</h2>
                {% endfor %}
            </div>

            {# Toon muziek entries gerelateerd aan de 'song'-sectie #}
            <section class="music-home">
                {% set songEntries = craft.entries().section('song').limit(3) %}
                {% for entry in songEntries %}
                    <article class="Music-article">
                        <div>
                            <img src="{{ entry.bannerImage.one().url('bannerImage') }}" alt="{{ entry.title }}">
                            <h3>{{ entry.title }}</h3>
                            <a href="{{ entry.url }}" class="button">More</a>
                        </div>
                    </article>
                {% endfor %}
            </section>
        </div>
    </section>

