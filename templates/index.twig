                    <a href="{{entry.url}}">read more</a>
                </div>
                
            </article>
        {% endfor %}
    </section>
            </div>
         </div>
      </section>
      
      <section id="testimonials">
         <div class="container">
            <h2 class="section-title"> Speaking artists</h2>
            <div class="testimonial-wrapper">
               <div class="testimonial">
               {% set entries = craft.entries().section('artist').limit(3) %}
        {% for entry in entries %} 
               <div class="testimonial-image">
                  <img src="{{ entry.bannerImage.one().url('bannerImage') }}" alt="{{ entry.title }}">
                  </div>
                  <p class="testimonial-text">{{entry.dialog}}</p>
                  {% endfor %}
               </div>
            </div>
         </div>
      </section>

      <section>
   {% set tweets = craft.tweetfeed.tweets(3, 'author_id,context_annotations', '&exclude=retweets,replies&user.fields=id') %}
   
   {% for tweet in tweets %}
      <div>
          <h3>{{ tweet.text }}</h3>
      </div>
   {% endfor %}
</section>
      
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
